	bool "mpp service procfs"
	depends on PROC_FS
	default y
	help
	  rockchip mpp service procfs.

config ROCKCHIP_MPP_RKVDEC2
	bool "RKV decoder v2 device driver"
	help
	  rockchip mpp rkv combo decoder v2.

endif
